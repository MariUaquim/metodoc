<% content_for :content_header do %>
<h1>Descrição do Projeto da Ontologia <%=@document.ontology.name%></h1>
<p>Artefato com informações iniciais do desenvolvimento da ontologia</p>
<ul class="page-menu">
  <li><%=link_to 'Disponibilizar em HTML', :action=>'print', :id=>@document.id%></li>
  <li><%=link_to 'Disponibilizar em XML', :action=>'print_xml', :id=>@document.id%></li>
</ul>
<%end%>


<div class="content">
  <h2>Documento</h2>
  <p>Descrição do Projeto da Ontologia</p>
  <h2>Projeto</h2>
  <p><%=@document.ontology.project_name%></p>
  <h2>Nome da Ontologia</h2>
  <p><%=@document.ontology.name%></p>
  <h2>Data de Criação</h2>
  <p><%=my_date(@document.created_at)%></p>
  <h2>Data de Atualização</h2>
  <p><%=my_date(@document.date)%></p>
  <h2>Domínio</h2>
  <p><%=@document.ontology.domain%></p>
  <h2>Propósito/Objetivo</h2>
  <p><%=@document.purpose%></p>
  <h2>Considerações Gerais:</h2>
  <p><%=@document.obs%></p>
</div>