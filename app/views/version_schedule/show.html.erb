<%content_for :content_header do%>
<h1>Cronograma de Atividades de <%=@version.ontology.name%> - V. <%=@version.number%></h1>
<p>Artefato com datas e informações das atividades do ciclo de vida da ontologia</p>
<ul class="page-menu">
  <li><%=link_to 'Disponibilizar em HTML', :action=>'print', :version_id=>@version.id%></li>
  <li><%=link_to 'Disponibilizar em XML', :action=>'print_xml', :version_id=>@version.id%></li>
</ul>
<%end%>


<% if @activities.size > 0 %>

<% @activities.each do |a| %>
  <div class="content">
    <h2><%=a.activity_name%></h2>
    <p><%=my_date(a.activity_date)%></p>
    <p><%=a.activity_description%></p>
  </div>
<%end%>

<%else%>

<div class="content">
  <h2>Nenhuma atividade incluída</h2>
</div>

<%end%>